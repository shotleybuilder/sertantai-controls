# Database (SHARED with sertantai-auth)
# IMPORTANT: Both apps connect to the same database for auth tables
# sertantai-auth has write access, sertantai-controls has read-only access to auth tables
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/sertantai_auth_dev
ELECTRIC_DATABASE_URL=postgresql://postgres:postgres@postgres:5432/sertantai_auth_dev

# Phoenix
SECRET_KEY_BASE=<generate-with-mix-phx.gen.secret>
PHX_HOST=localhost
PORT=4000

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Electric
ELECTRIC_URL=http://localhost:5133
ELECTRIC_PROXY_URL=http://localhost:3000
ELECTRIC_WRITE_TO_PG_MODE=direct_writes

# Authentication (CRITICAL: Must match sertantai-auth)
# This secret is used to verify JWT tokens from sertantai-auth
# MUST be the exact same value as SHARED_TOKEN_SECRET in ~/Desktop/sertantai_auth
SHARED_TOKEN_SECRET=<MUST-MATCH-SERTANTAI-AUTH>

# Shape Tokens
SHAPE_TOKEN_TTL=3600
SHAPE_TOKEN_TYPE=Bearer

# Environment
MIX_ENV=dev

# Production-only variables (set in deployment environment):
# FRONTEND_URL=https://app.example.com
# DATABASE_URL=<managed-postgres-connection-string>
# SECRET_KEY_BASE=<production-secret>
